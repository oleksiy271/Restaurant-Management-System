<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dineout">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:configChanges="orientation|screenSize"
        android:fullBackupContent="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true">

        <!--Billing Module-->
        <activity android:name=".billing.PendingPayments">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".billing.ConfirmPayment" />
        <activity android:name=".billing.Feedback"></activity>


        <!--Kitchen Module-->
        <activity android:name=".kitchen.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".kitchen.CooksListActivity" />
        <activity android:name=".kitchen.AttendanceActivity" />


    </application>


</manifest>
