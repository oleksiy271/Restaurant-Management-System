<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:elevation="12dp">

    <TextView
        android:id="@+id/Tableid202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:text="Table Id: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TID200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Tableid202"
        android:layout_toRightOf="@+id/Tableid202"
        android:layout_marginTop="9dp"
        android:text="1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/orderid200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OrderID: "
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Tableid202"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/OID200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/TID200"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/orderid200"
        android:layout_toRightOf="@+id/orderid200"
        android:text=" 4"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Served200"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="118dp"
        android:layout_height="55dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/TID200"
        android:layout_toRightOf="@+id/TID200"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFamily="serif"
        android:text="Served"
        android:textSize="12dp"
        android:textStyle="bold" />
</RelativeLayout>